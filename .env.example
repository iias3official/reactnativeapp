# API Configuration
API_BASE_URL=https://api.astrowisdom.example

# Firebase Configuration
# Get these values from: https://console.firebase.google.com/
# Go to Project Settings > General > Your apps > Web app
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Payment Gateway - Razorpay
# Get test keys from: https://dashboard.razorpay.com/app/keys
# Use test mode keys for development (starts with rzp_test_)
RZP_KEY_ID=rzp_test_your_key_id_here
RZP_KEY_SECRET=your_key_secret_here

# Video/Voice Calling - Agora
# Get from: https://console.agora.io/
# Create a project and get App ID
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_certificate_here

# Error Tracking - Sentry (Optional)
# Get DSN from: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Environment
NODE_ENV=development

# App Configuration
APP_NAME=AstroWisdom
APP_VERSION=1.0.0

# API Endpoints (Optional - for different environments)
# API_BASE_URL_DEV=http://localhost:3000/api
# API_BASE_URL_STAGING=https://staging-api.astrowisdom.example/api
# API_BASE_URL_PROD=https://api.astrowisdom.example/api
